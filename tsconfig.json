{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "types": [
      "vitest/globals"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019",
      "ESNext"
    ],
    "module": "CommonJS",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "~/entities/*": [
        "./app/domain/payments/entities/*"
      ],
      "~/repositories/*": [
        "./app/domain/payments/repositories/*"
      ],
      "~/services/*": [
        "./app/domain/payments/services/*"
      ],
    },
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  }
}